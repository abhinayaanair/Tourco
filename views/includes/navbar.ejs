<style>
    .search-bar {
        height: 2rem;
        border-radius: 2.5rem;
        width: 21rem;
        padding: 0.5rem 5rem;
    }

    .btn-search {
        height: 2rem;
        border-radius: 2.5rem;
        width: 7rem;
        background-color: #fe424d;
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-search:hover {
        border: 2px solid #fe424d;
        color: #fe424d;
    }

    .btn-i {
        display: inline;
        margin-right: 0.8rem;
